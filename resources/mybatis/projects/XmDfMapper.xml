<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="XmDfMapper"> 
	
	<select id="listPage" parameterType="page" resultType="pd"> 
		SELECT * FROM JL_XM_DF WHERE 1=1 
		<if test=" pd.NAME!=null and pd.NAME!=''">
	         AND NAME LIKE CONCAT(CONCAT('%', #{pd.NAME}),'%') 
	    </if>
	</select>  
	
	<select id="findCount" parameterType="page" resultType="pd">
		SELECT count(*) counts FROM JL_XM_DF  WHERE 1=1
		<if test=" pd.NAME!=null and pd.NAME!=''">
	         AND NAME LIKE CONCAT(CONCAT('%', #{pd.NAME}),'%') 
	    </if> 
	</select>   
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd" useCache="false">
		select * from JL_XM_DF where ID = #{ID}
	</select> 
	
	<!-- 删除用户 -->
	<update id="edit" parameterType="pd">
		UPDATE JL_XM_DF SET 
		<if test="NAME!=null">
			NAME = #{NAME},
		</if>
		<if test="PHONE!=null">
			PHONE = #{PHONE},
		</if>
		<if test="IMG_PATH!=null">
			IMG_PATH = #{IMG_PATH},
		</if>
		<if test="CREATE_DATE!=null">
			CREATE_DATE = #{CREATE_DATE},
		</if>
		<if test="STATUS!=null">
			STATUS = #{STATUS},
		</if>
		ID=#{ID} WHERE ID=#{ID}
	</update>  
	
	<!-- 删除用户 -->
	<delete id="delete" parameterType="pd" flushCache="false">
		delete from JL_XM_DF where ID = #{ID} 
	</delete> 
	
	<update id="updatedelhd" parameterType="pd" flushCache="false">
		update  JL_XM_DF set ISSYSLOOK='1'
	</update>
</mapper>